{
  "name": "@ucm/root",
  "lint-staged": {
    "**/package.json": [
      "syncpack format"
    ]
  },
  "private": true,
  "scripts": {
    "lint:staged": "lerna exec --concurrency 1 --stream -- lint-staged && lint-staged",
    "postinstall": "(husky install && husky set .husky/pre-commit \"yarn lint:staged\") || exit 0"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
